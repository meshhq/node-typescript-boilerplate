{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"command": "gulp",
	"isShellCommand": true,
	"args": [],
	"showOutput": "always",
	"tasks": [
		{
            "taskName": "lint",
            "suppressTaskName": true,
            "args": [ "run", "lint"],
            "problemMatcher": {
                "base": "$tslint5",
                "fileLocation": "relative"
            }
        }
	]
}